  <div class="container pt-5">
        <div class="row">
            <div class="col-md-5 mx-auto">

                <h5>Login with</h5>

                <div class="oauth-login d-flex justify-content-between mb-5">
                    <a href="/auth/google" class="btn btn-outline-danger">Google</a>
                    <a href="/auth/github" class="btn btn-outline-danger">Github</a>
                </div>

                <hr>

                <form action="/auth/login" methods="POST">
                    
                    <div class="form-group">
                        <label for="username"> Username </label>
                        <input type="text" name="username" id="username" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="password"> Password </label>
                        <input type="password" name="password" id="password" class="form-control">
                    </div>
                    <div class="form-group">
                        <button>Login</button>
                    </div>
    
                    <br>

                    Don't have any account? <a href="/auth/register"> Register now</a>
                    
                </form>
            </div>
        </div>
    </div>